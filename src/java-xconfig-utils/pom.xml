<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.tuenti.xconfig</groupId>
	<artifactId>java-xconfig-utils</artifactId>
	<packaging>jar</packaging>
	<name>XConfigJavaUtils</name>
	<version>1.1.1-SNAPSHOT</version>

	<properties>
		<java.version>1.8</java.version>
		<xconfig.version>1.1.2</xconfig.version>
		<jacoco.version>0.7.9</jacoco.version>
	</properties>

	<!-- Tuenti repos -->
	<distributionManagement>
		<repository>
			<id>repo.nexus.tuenti</id>
			<url>https://nexus.tuenti.io/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>repo.nexus.tuenti</id>
			<url>https://nexus.tuenti.io/nexus/content/repositories/snapshots</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<dependencies>
		<!-- Basic dependencies -->
		<dependency>
			<groupId>com.tuenti.xconfig</groupId>
			<artifactId>xconfig-base</artifactId>
			<version>${xconfig.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>javax.inject</artifactId>
			<version>1</version>
		</dependency>

		<!-- Test dependencies -->
		<dependency>
			<groupId>com.tuenti.xconfig</groupId>
			<artifactId>xconfig-java</artifactId>
			<version>${xconfig.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- 1.8 compiler -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>

			<!-- Jacoco test coverage report -->
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.version}</version>
				<configuration>
					<excludes>
						<exclude>**/*Exception.*</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>unit-report</id>
						<goals>
							<goal>prepare-agent</goal>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
